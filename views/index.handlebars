<!-- Header -->
<header class="container-fluid">
  <img src="/assets/img/bigkauna.png">
</header>

<main class="container-fluid">

  <h1>Hamburgers: the cornerstone of any nutritious breakfast</h1>

</main>

<!-- Create your own Burger input -->
<div class="container-fluid pt-3">
  <div class="row justify-content-md-center">
    <div class="col col-md-auto"></div>
    <div class="col col-md-auto border border-dark bg-light">
      <h2 class=" sub-head">Add a Burger</h2>
      <form id="createOrder">
        <div class="form-group">
          <label for="bu"></label>
          <input type="text" placeholder="Your Burger Here!" id="bu" name="burger_name" class="burger-form">
          <button type="submit" id="bu" name="burger_name"><img class="burgerpic" src="/assets/img/final_jules.png"
              alt="Samuel L Jackson eating a burger">
          </button>
        </div>
    </div>
    <div class="col col-md-auto"></div>
  </div>
</div>
</form>

<!-- Burgers list -->

<div class="container-fluid">

  <div class="row justify-content-md-center border border-dark burger-row pb-4">

    <div class="col col-md-auto">
      <h3 class="menu-titles">Menu</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col col-md-auto">
      <h3 class="menu-titles">Burgers You've Crushed</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>