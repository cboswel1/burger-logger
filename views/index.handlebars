<img src="/assets/img/bigkauna.png">

<h1>Hamburgers: the cornerstone of any nutritious breakfast</h1>

<h2>That's a tasty burger!</h2>

<!-- Burgers list -->

<div class="container-fluid">

<div class="row justify-content-md-center">

<div class="col-4">
  <h3>Menu</h3>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-4">
  <h3>Burgers You've Crushed</h3>
<ul>
  {{#each burgers}}
    {{#if devoured}}
           {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>
<h2>Add a Burger</h2>
<form class="createOrder">
  <textarea type="text" name="burger"></textarea>
    <button type="submit">Order Up!</button>
</form>


